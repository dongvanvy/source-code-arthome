@using WEBREPORTMOBILEAPP.Models
@model List<tbl_bill>
@{
    ViewBag.Title = "ViewEditBill";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
    int i = 1;
    var vw_banhang = ViewBag.banhang as List<VW_banhang>;
}
<script>
    $(function () {
        $("#startdate").datepicker({
            dateFormat: "yy-mm-dd",
            ignoreReadonly: true,
            allowInputToggle: true
        }).val()
        $("#enddate").datepicker({
            dateFormat: "yy-mm-dd",
            ignoreReadonly: true,
            allowInputToggle: true
        }).val()
        $("#txt_date").datepicker({
            dateFormat: "yy-mm-dd",
            ignoreReadonly: true,
            allowInputToggle: true
        }).val()
    });
    function submitform() {
        $('#BATestForm').submit();
    }
</script>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        @using (Html.BeginForm("ViewEditBill", "HOME", FormMethod.Post, new { id = "BATestForm", name = "BATestForm" }))
        {
            <table>
                <thead>
                    <tr>
                        <th>Ngày bắt đầu</th>
                        <th><input id="startdate" name="txt_bd" value="@ViewBag.bd" class="form-control" onchange="submitform();" type="date" /></th>
                    </tr>
                    <tr>
                        <th>Ngày kết thúc</th>
                        <th><input id="enddate" name="txt_kt" value="@ViewBag.kt" class="form-control" onchange="submitform();" type="date" /></th>
                    </tr>
                </thead>
            </table>
        }
        <br />
        <form name="thembill" id="thembill">
            <table>
                <thead>
                    <tr>
                        <th>Thêm Bill</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            Username
                        </td>
                        <td>
                            <input type="text" placeholder="BaCode" required name="txt_bacode" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Mã Siêu thị
                        </td>
                        <td>
                            <input type="text" placeholder="Mã Siêu Thị" required name="txt_shopid" />
                        </td>
                    </tr>
                    <tr>
                        <td>Thời gian</td>
                        <td>
                            <input type="date" name="txt_date" id="txt_date"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <a onclick="ThemBill()" href="javascript:void(0)" class="btn btn-primary">Thêm</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
    <form>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Bill_ID</th>
                            <th>Ngày</th>
                            <th>Nhân viên</th>
                            <th>Cửa hàng</th>
                            <th>Tổng Giá Trị</th>
                            <th>Chi Tiết</th>
                            <th>Xóa</th>
                            <th>Sửa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (vw_banhang.Where(n => n.Bill_id == item.Bill_id).Count() > 0)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Bill_id</td>
                                    <td>@item.Bill_date.Value.ToString("HH:mm:ss dd/MM/yyyy")</td>
                                    <td>@vw_banhang.FirstOrDefault(n => n.Bill_id == item.Bill_id).Us_id</td>
                                    <td>@vw_banhang.FirstOrDefault(n => n.Bill_id == item.Bill_id).Shop_id</td>
                                    <td>
                                        @vw_banhang.Where(n => n.Bill_id == item.Bill_id).Sum(n => n.BillDetail_dongia * n.BillDetail_soluong).Value.ToString("#,##")
                                    </td>
                                    <th>
                                        <a href="@Url.Action("ViewDetailBill", "Home",new { id=item.Bill_id})" target="_blank">
                                            Chi Tiết
                                        </a>

                                    </th>
                                    <th>
                                        <a onclick="buy_item_webshop('@item.Bill_id')" href="javascript:void(0)">Xóa</a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("EditBill","Home",new { id=item.Bill_id})" target="_blank">Sửa</a>
                                    </th>
                                </tr>
                                
                            }
                            else
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Bill_id</td>
                                    <td>@item.Bill_date.Value.ToString("HH:mm:ss dd/MM/yyyy")</td>
                                    <td></td>
                                    <td></td>
                                    <th>
                                        <a href="@Url.Action("ViewDetailBill", "Home",new { id=item.Bill_id})" target="_blank">
                                            Chi Tiết
                                        </a>

                                    </th>
                                    <th>
                                        <a onclick="buy_item_webshop('@item.Bill_id')" href="javascript:void(0)">Xóa</a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("EditBill","Home",new { id=item.Bill_id})" target="_blank">Sửa</a>
                                    </th>
                                </tr>
                            }
                            i++;

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

<script>
    function buy_item_webshop(id) {
        if (confirm("Bạn đã chắc chắn chưa?")) {
            $.post('@Url.Action("ActionDeleteBill", "Home")', { id: id }, function (res) {
            if (res.status != undefined && res.status == "1") {
                //mua item thanh cong, lam mot viec gi do sau do, vi du: thong bao mua hang thanh cong va dong' popup
                alert(res.message);
                location.reload(true);
            } else {
                //thong bao loi ra cho nguoi dung hoặc thông báo validate data gì đó
                alert(res.message);
            }
        }, 'json');//kiểu dữ liệu trả về là json
        }
        return false;
    }
</script>
<script>
    function ThemBill() {
        var datapost = $('#thembill').serialize();
                    $.post('@Url.Action("ThemBill", "Home")', datapost, function (res) {
                        if (res.status != undefined && res.status == "1") {
                            //mua item thanh cong, lam mot viec gi do sau do, vi du: thong bao mua hang thanh cong va dong' popup
                                    alert(res.message);
                                    location.reload(true);
                        } else {
                            //thong bao loi ra cho nguoi dung hoặc thông báo validate data gì đó
                            alert(res.message);
                        }
                    }, 'json');//kiểu dữ liệu trả về là json
                    return false;
                }
</script>


