@using WEBREPORTMOBILEAPP.Models
@model tbl_billDetail
@{
    ViewBag.Title = "EditBillDetail";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        <form name="themsp" id="themsp">
            <table>
                <thead>
                    <tr>
                        <th>Sửa sản phẩm vào đơn hàng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            SKUBARCODE
                        </td>
                        <td>
                            <input hidden type="text" name="Txt_id" value="@Model.Bill_id" />
                            <input type="number" inputmode="numeric" name="Txt_barcode" required="required" placeholder="Barcode sản phẩm" readonly="readonly" value="@Model.sku_barcode"/>
                        </td>
                    </tr>
                    <tr>
                        <td>Số lượng</td>
                        <td>
                            <input type="number" inputmode="numeric" required="required" name="Txt_sl" placeholder="Số lượng" value="@Model.BillDetail_soluong"/>
                        </td>
                    </tr>
                    <tr>
                        <td>Đơn giá</td>
                        <td>
                            <input type="number" inputmode="numeric" required="required" name="Txt_dongia" placeholder="Đơn giá" value="@Model.BillDetail_dongia"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="button" value="Sửa" onclick="ThemSp()"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
