        <br />
    </div>
</div>
<script>
       function ThemSp()
                {
                    var datapost = $('#themsp').serialize();
                    $.post('@Url.Action("AddSPBilldetail", "Home")', datapost, function (res) {
                        if (res.status != undefined && res.status == "1") {
                            //mua item thanh cong, lam mot viec gi do sau do, vi du: thong bao mua hang thanh cong va dong' popup
                                    alert(res.message);
                                    location.reload(true);
                        } else {
                            //thong bao loi ra cho nguoi dung hoặc thông báo validate data gì đó
                            alert(res.message);
                        }
                    }, 'json');//kiểu dữ liệu trả về là json
                    return false;
                }
</script>


